@page "/Gigs"

<PageTitle>Shows</PageTitle>

<div class="gigs-hero">
    <img src="/images/LogoJellyfish.png"
         alt=""
         class="gigs-backdrop"
         aria-hidden="true" />
    <div class="gigs-content">
        <h1>Upcoming shows</h1>

        @if (!listGigs.Any())
        {
            <p>No shows announced yet — stay tuned!</p>
        }
        else
        {
            <ul class="gigs-list">
                @foreach (var gig in listGigs.OrderBy(g => g.Key))
                {
                    <li class="gig-item">
                        <span class="gig-date">@gig.Key.ToString("dd MMM yyyy")</span>
                        <span class="gig-location">@gig.Value</span>
                    </li>
                }
            </ul>
        }
    </div>
</div>


@code {
    private Dictionary<DateTime, string> listGigs = new()
    {
        // { new DateTime(2026, 1, 24), "'T Loze Vissertje, Rupelmonde" },
        // { new DateTime(2027, 1, 1), "AFAS Dome, Antwerpen" },
    };
}